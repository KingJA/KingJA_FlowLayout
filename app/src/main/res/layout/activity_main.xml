<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <kingja.com.kingja_flowlayout.KingJaFlowLayout
        xmlns:kingja="http://schemas.android.com/apk/res-auto"
        android:id="@+id/kj_fl_inAverage"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kingja:horizontalSpacing="10dp"
        kingja:verticalSpacing="10dp"
        />
    <TextView
        android:text="自动换行，填充宽度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <kingja.com.kingja_flowlayout.KingJaFlowLayout
        xmlns:kingja="http://schemas.android.com/apk/res-auto"
        android:id="@+id/kj_fl_average"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kingja:horizontalSpacing="10dp"
        kingja:verticalSpacing="10dp"
        kingja:average="true"
        />

</LinearLayout>
